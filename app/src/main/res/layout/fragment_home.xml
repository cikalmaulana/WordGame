                        <TextView
                            android:layout_column="1"
                            android:text="9.249 pts"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="5. BruceBanner"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"
