                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:layout_width="100dp"/>
                        <TextView
                            android:layout_column="2"
                            android:text="99.999 pts"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textSize="20dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="2. SteveRogers"
                            android:padding="10dp"
                            android:textColor="@color/white"
