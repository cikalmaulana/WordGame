<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bacaba persent"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/bacabacaTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baca"
        android:layout_gravity="center_horizontal"
        android:textSize="80dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/bacabacaTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baca"
        android:layout_gravity="center_horizontal"
        android:textSize="80dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/computerImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/landingpagelogo"
            android:maxWidth="280dp"
            android:maxHeight="280dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/quotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The easy way to start reading practice"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:text="Masuk"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btnlayout"
            android:textAllCaps="false"/>

    </LinearLayout>



</LinearLayout>